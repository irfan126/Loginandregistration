<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingRight="10dip"
        android:paddingLeft="10dip">


        <TextView
            android:id="@+id/userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="User ID"
            android:paddingBottom="40dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/todaysDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Date"
            android:paddingBottom="40dp"
            android:paddingTop="2dp"/>

        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/userID" />

        <TextView
            android:id="@+id/deleteAccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SplitLine_hor1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Delete Account"
            android:textColor="#222222"
            android:textSize="16dp"/>

        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/deleteAccount" />


        <TextView
            android:id="@+id/passwordReset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SplitLine_hor2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Password reset"
            android:textColor="#222222"
            android:textSize="16dp"/>

        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/passwordReset" />



    </RelativeLayout>

</ScrollView>