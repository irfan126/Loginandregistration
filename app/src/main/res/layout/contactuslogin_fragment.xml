<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingRight="10dip"
        android:paddingLeft="10dip">



        <TextView
            android:id="@+id/todaysDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Date"
            android:paddingBottom="20dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/ContactUsHeader1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userID"
            android:paddingBottom="2dp"
            android:text="Contact Us"
            android:textStyle="bold|italic"
            android:textColor="#222222"
            android:textSize="16dp"/>

        <View
            android:id="@+id/SplitLine_hor2"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/ContactUsHeader1" />


        <TextView
            android:id="@+id/ContactUsText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SplitLine_hor2"
            android:paddingBottom="20dp"
            android:textColor="#222222"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/ContactUsHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ContactUsText"
            android:paddingBottom="2dp"
            android:text="Contact Us"
            android:textStyle="bold|italic"
            android:textColor="#222222"
            android:textSize="16dp"/>

        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginBottom="5dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/ContactUsHeader" />

        <EditText
            android:id="@+id/ContactUs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SplitLine_hor3"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:hint="@string/hint_feedback"
            android:padding="10dp"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="4"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint"
            android:scrollbars="vertical"
            android:gravity="top|left"
            android:maxLength="500"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/ContactUs"
            android:background="@color/white"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_register_hint"
            android:maxLength="35"/>




        <!-- Confirm Button -->

        <Button
            android:id="@+id/btnSend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/email"
            android:text="@string/btn_send"/>


        <!-- Link to Login Screen -->

        <Button
            android:id="@+id/btnLinkToLoginScreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_below="@+id/btnSend"
            android:background="@null"
            android:text="@string/btn_back_to_login"
            android:textAllCaps="false"
            android:textColor="@color/input_login"
            android:textSize="15dp" />


    </RelativeLayout>

</ScrollView>